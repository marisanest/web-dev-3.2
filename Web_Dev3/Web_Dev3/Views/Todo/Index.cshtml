@model IEnumerable<Web_Dev3.Models.TodoModel>

@{
    ViewBag.Title = "Todo's";
}

<h2>Todo's</h2>

<p>
    <a href="/Todo/Add" class="btn btn-primary btn-md">
        <span class="glyphicon glyphicon-plus"></span> Hinzufügen
    </a>
</p>

<div class="row">
    <div class="col-md-4">
        @if (Model != null)
        {
            <div class="panel panel-default">
                <table class="table">
                    @foreach (var item in Model)
                    {

                        <tr>
                        @if (item.Id == Model.ElementAt(0).Id)
                        {
                            <td style="border: 0; padding-left: 12px">
                                <h4 style="margin-bottom: 4px; margin-top: 4px;">@Html.DisplayFor(modelItem => item.Titel)</h4>
                                <div style="margin-bottom: 4px">@Html.DisplayFor(modelItem => item.Description)</div>
                            </td>
                            <td  style="border: 0; padding-right: 12px">
                                <div class="btn-group pull-right" role="group">
                                    <a href="@Url.Action("Edit", "Todo", new {id = item.Id })" class="btn btn-default">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Todo", new {id = item.Id })" class="btn btn-default">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </div>

                            </td>
                        }
                        else
                        {
                            <td style="padding-left: 12px">
                                <h4 style="margin-bottom: 4px; margin-top: 4px;">@Html.DisplayFor(modelItem => item.Titel)</h4>
                                <div style="margin-bottom: 4px">@Html.DisplayFor(modelItem => item.Description)</div>
                            </td>
                            <td style="padding-right: 12px;">
                                <div class="btn-group pull-right" role="group">
                                    <a href="@Url.Action("Edit", "Todo", new {id = item.Id })" class="btn btn-default">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Todo", new {id = item.Id })" class="btn btn-default">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </div>

                            </td>
                        }               
                        </tr>
                    }
                </table>
            </div>
        }
    </div>
</div>