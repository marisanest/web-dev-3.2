@model IEnumerable<Web_Dev3.Models.TodoModel>

@{
    ViewBag.Title = "Todo's";
}

<h2>Todo's</h2>

<p>
    <a href="/Todo/Add" class="btn btn-primary btn-md">
        <span class="glyphicon glyphicon-plus"></span> Hinzufügen
    </a>
</p>

<div class="row">
    <div class="col-md-4">
        <div class="panel-group">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                                <div class="col-md-6">
                                    <div class="row">
                                        <h4>@Html.DisplayFor(modelItem => item.Titel)</h4>
                                    </div>
                                    <div class="row">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default" aria-label="Bearbeiten">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </button>
                                        <button type="button" class="btn btn-default" aria-label="Löschen">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                    </div>
                                    
                                   @Html.ActionLink("E", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-md glyphicon glyphicon-pencil" })

                                   @Html.ActionLink("D", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-md glyphicon glyphicon-trash" })
                                </div>
                        </div>
                    </div>
                 }
             }
       </div>
    </div>
</div>